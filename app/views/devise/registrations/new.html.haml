.wrapper
  .header
    %h1.header__title
      %a.header__title--post1{:href => "http://localhost:3000/"} KoRONaDoyo
      %a.header__title--post1{:href => "http://localhost:3000/"} ZeninSyouGO!!
  
  .sign-up__form
    %h2.sign-up__form__title Welcome to Our Room！!
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        .field
          = f.text_field :name, autofocus: true, placeholder: "Name", autocomplete: "name", class: "field__contents"
        .field
          = f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "field__contents"
        .field
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, placeholder: "PassWord", autocomplete: "new-password", class: "field__contents"
        .field
          = f.password_field :password_confirmation, placeholder: "Password_Confirmation", autocomplete: "new-password", class: "field__contents"
        .actions
          = f.submit "Sign up", class: "field__submit"
        = render "devise/shared/links"
  
  .box_container
    .images_holder
      .image_div.left
        %img.box_image{:alt => "ドア", :src => "/assets/door.png", class: "field__pictures"}/
      .image_div.right
        %img.box_image{:alt => "ドア", :src => "/assets/door.png"}/
  .footer1
  
